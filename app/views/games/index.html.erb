<h1>Listing games</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Gamemode</th>
    <th>Currentscore</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.course %></td>
    <td><%= game.gameMode %></td>
    <td><%= game.currentScore %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

